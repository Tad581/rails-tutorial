<h1>Friends</h1>
<div id="friends">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th colspan='3'></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <%# <% if friend.user == current_user %>
        <tr>
          <td>
            <%= friend.first_name + ' ' + friend.last_name %>
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to 'Show', friend, class: "btn btn-outline-danger btn-sm"%></td>

          <td><%= link_to "Edit", edit_friend_path(friend), class: 'btn btn-outline-danger btn-sm' %></td>
          <td><%= button_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
      <%# <% end %>
    </tbody>
  </table>
</div>
<%= link_to "New friend", new_friend_path %>
